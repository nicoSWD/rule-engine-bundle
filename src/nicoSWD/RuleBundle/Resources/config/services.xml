<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="rule_parser" class="nicoSWD\RuleBundle\Model\Rule">
            <argument type="service" id="nico_swd.rules.parser" />
            <argument type="service" id="nico_swd.rules.evaluator" />
        </service>

        <service id="nico_swd.rules.parser" class="nicoSWD\Rules\Parser">
            <argument type="service" id="nico_swd.rules.tokenizer"/>
            <argument type="service" id="nico_swd.rules.expressions.factory"/>
        </service>

        <service id="nico_swd.rules.evaluator" class="nicoSWD\Rules\Evaluator" />
        <service id="nico_swd.rules.tokenizer" class="nicoSWD\Rules\Tokenizer" />
        <service id="nico_swd.rules.expressions.factory" class="nicoSWD\Rules\Expressions\Factory" />
    </services>
</container>
